<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.product.mapper.ReceivingManaMapper">

	<!--mybatis ehcache缓存配置 -->
	<!-- 以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 <cache type="org.mybatis.caches.ehcache.LoggingEhcache" 
		/> -->
	<!-- <cache type="org.mybatis.caches.ehcache.EhcacheCache"/> -->

	<insert id="saveReceiveCargoBase"  useGeneratedKeys="true" keyProperty="id" parameterType="ReceiveInfo">
          insert into receivemgrbase(receivetime,receiveorgid,receivepeopleid,telnum) values
          (str_to_date(#{receivetime},'%Y-%m-%d'),#{receiveorgid},#{receivepeopleid},#{telnum})
	</insert>
	<insert id="saveReceiveCargoDetail" parameterType="ReceiveInfo" >
          insert into receivemgrdetail(receivemgrid,cargoid,cargocount,countorg,cargoweight,funguscount,reqreagent,irradtype,irradtime,irradtimeorg,irradflag)
          values(#{id},#{cargoid},#{cargocount},#{countorg},#{cargoweight},#{funguscount},#{reqreagent},#{irradtype},#{irradtime},#{irradtimeorg},#{irradflag})
	</insert>
	
	<select id="isreapeat" parameterType="ReceiveInfo" resultType="ReceiveInfo">
		  select a.receivetime,a.receiveorgname,a.receivepeople,b.cargoid from receivemgrbase a,receivemgrdetail b	 where a.receivetime= str_to_date(#{receivetime}
		  and a.receiveorgname
	</select>
	
	
</mapper>